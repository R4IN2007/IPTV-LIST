<?php
// URL of the website
$targetUrl = 'https://cordoba.mitelefe.com/vivo/';

// Use cURL to fetch the page content
$ch = curl_init();
curl_setopt($ch, CURLOPT_URL, $targetUrl);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
curl_setopt($ch, CURLOPT_FOLLOWLOCATION, true);
// Mimic a real browser
curl_setopt($ch, CURLOPT_USERAGENT, 'Mozilla/5.0 (Windows NT 10.0; Win64; x64)');
$html = curl_exec($ch);
curl_close($ch);

// Try to find an .m3u8 link in the HTML
preg_match('/(https?:\/\/[^"\']+\.m3u8[^"\']*)/', $html, $matches);

if (!empty($matches[1])) {
    $m3u8Url = $matches[1];
    echo "Found stream: <a href='$m3u8Url'>$m3u8Url</a><br>";
    echo "You can open this link in VLC.";
} else {
    echo "No .m3u8 stream found.";
}
?>
